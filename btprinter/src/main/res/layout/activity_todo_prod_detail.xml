<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >
  <EditText
      android:id="@+id/txt_spec"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="match_parent"
      android:hint="@string/hint_product_spec"
      />
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
  <ImageButton
      android:id="@+id/img_qrcode"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_qrcode_scan_black_24dp"
      />
  <ImageButton
      android:id="@+id/btn_ocr"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_ocr24"
      />
  </LinearLayout>
</LinearLayout>


  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      >
    <com.ledway.btprinter.views.MImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/txt_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/hint_prod_image"
        />

  </FrameLayout>

</LinearLayout>